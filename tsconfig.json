{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "types": [
      "reflect-metadata",
      "jest",
      "@testing-library/jest-dom"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}